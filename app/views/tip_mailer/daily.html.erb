<style>
  .avatarImage {
    -moz-border-radius: 50%;
    -webkit-border-radius: 50%;
    border-radius: 50%;
  }
</style>
<style type="text/css" data-roadie-ignore>
  @media only screen and (max-width: 480px) {
    .createdBy {
      padding-left: 15px;
    }
  }
</style>

<% content_for :newsletter_title do %>
  <%= @tip.subject %>
<% end %>

<!-- Header  -->
<tr>
  <td align="center" valign="top">
    <table border="0" cellpadding="0" cellspacing="0" width="100%">
      <tr>
        <td align="center" valign="top">
          <table border="0" cellpadding="0" cellspacing="0" width="600" class="flexibleContainer">
            <tr>
              <td align="center" valign="top" width="100%" class="dottedBorder flexibleContainerCell">
                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                  <tr>
                    <td valign="top" class="textContent" colspan="1">
                      <%= image_tag(@tip.creator.gravatar_url, class: 'avatarImage') %>
                    </td>
                    <td valign="top" class="textContent createdBy" colspan="8">
                      created by <%= "#{@tip.creator.first_name} #{@tip.creator.last_name}" %>
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </td>
</tr>

<!-- Main -->
<tr>
  <td align="center" valign="top">
    <table border="0" cellpadding="0" cellspacing="0" width="100%">
      <tr>
        <td align="center" valign="top">
          <table border="0" cellpadding="0" cellspacing="0" width="600" class="flexibleContainer">
            <tr>
              <td align="center" valign="top" width="100%" class="flexibleContainerCell">
                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                  <tr>
                    <td valign="top" class="textContent">
                      <%= raw @tip.body %>
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </td>
</tr>


<!-- Share -->
<tr>
  <td align="center" valign="top">
    <table border="0" cellpadding="0" cellspacing="0" width="100%">
      <tr>
        <td align="center" valign="top">
          <table border="0" cellpadding="0" cellspacing="0" width="600" class="flexibleContainer">
            <tr>
              <td align="center" valign="top" width="100%" class="flexibleContainerCell">
                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                  <tr>
                    <td class="share buttonContent" width="100%">
                      <table class="facebook emailButton" align="center">
                        <tr>
                          <td class="facebook share buttonContent">
                            <a href="https://www.facebook.com/sharer/sharer.php?u=" target="_blank">
                              <img src="https://s3-us-west-1.amazonaws.com/carsocial-web/newsletters/images/facebook-icon.png" />
                              <span>Share This Tip</span>
                            </a>
                          </td>
                        </tr>
                      </table>
                    </td>

                    <td class="share buttonContent" width="100%">
                      <table class="email emailButton" align="center">
                        <tr>
                          <td class="email share buttonContent">
                            <a href="mailto:?subject=" target="_blank">
                              <img src="https://s3-us-west-1.amazonaws.com/carsocial-web/newsletters/images/email-icon.png" />
                              Invite a Friend
                            </a>
                          </td>
                        </tr>
                      </table>
                    </td>

                    <td class="share buttonContent" width="100%">
                      <table class="twitter emailButton" align="center">
                        <tr>
                          <td class="twitter share buttonContent">
                            <a href="https://twitter.com/intent/tweet?text=&source=webclient" target="_blank">
                              <img src="https://s3-us-west-1.amazonaws.com/carsocial-web/newsletters/images/twitter-icon.png" />
                              Tweet this Tip
                            </a>
                          </td>
                        </tr>
                      </table>
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </td>
</tr>
