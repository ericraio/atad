<style>
  .avatarImage {
    -moz-border-radius: 50%;
    -webkit-border-radius: 50%;
    border-radius: 50%;
  }
  .footer {
    padding-bottom: 15px;
  }
</style>
<style type="text/css" data-roadie-ignore>
  @media only screen and (max-width: 480px) {
    .createdBy {
      padding-left: 15px;
    }
  }
</style>

<% content_for :newsletter_title do %>
  <%= @tip.subject %>
<% end %>

<!-- Header  -->
<tr>
  <td align="center" valign="top">
    <table border="0" cellpadding="0" cellspacing="0" width="100%">
      <tr>
        <td align="center" valign="top">
          <table border="0" cellpadding="0" cellspacing="0" width="600" class="flexibleContainer">
            <tr>
              <td align="center" valign="top" width="100%" class="dottedBorder flexibleContainerCell">
                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                  <tr>
                    <td valign="top" class="textContent" colspan="1">
                      <%= image_tag(@tip.creator.gravatar_url, class: 'avatarImage') %>
                    </td>
                    <td valign="top" class="textContent createdBy" colspan="8">
                      created by <%= "#{@tip.creator.first_name} #{@tip.creator.last_name}" %>
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </td>
</tr>

<!-- Main -->
<tr>
  <td align="center" valign="top">
    <table border="0" cellpadding="0" cellspacing="0" width="100%">
      <tr>
        <td align="center" valign="top">
          <table border="0" cellpadding="0" cellspacing="0" width="600" class="flexibleContainer">
            <tr>
              <td align="center" valign="top" width="100%" class="flexibleContainerCell">
                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                  <tr>
                    <td valign="top" class="textContent">
                      <%= raw @tip.body %>
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </td>
</tr>


<!-- Share -->
<tr>
  <td align="center" valign="top">
    <table border="0" cellpadding="0" cellspacing="0" width="100%">
      <tr>
        <td align="center" valign="top">
          <table border="0" cellpadding="0" cellspacing="0" width="600" class="flexibleContainer">
            <tr>
              <td align="center" valign="top" width="100%" class="flexibleContainerCell">
                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                  <tr>
                    <td class="share buttonContent" width="100%">
                      <table class="facebook emailButton" align="center">
                        <tr>
                          <td class="facebook share buttonContent">
                            <a href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Fwww.agiletipaday.com%2F%3Fref%3D<%= @user.ref_code %>" target="_blank">
                              <img src="https://s3-us-west-1.amazonaws.com/atad/email/facebook-icon.png" />
                              <span>Share to Facebook</span>
                            </a>
                          </td>
                        </tr>
                      </table>
                    </td>

                    <td class="share buttonContent" width="100%">
                      <table class="email emailButton" align="center">
                        <tr>
                          <td class="email share buttonContent">
                            <a href="mailto:?subject=Thank%20me%20later&body=Hi%20there,%0A%0ATake%20a%20look%2C%20what%20I%27ve%20hunted.%20An%20invite-only%20service%20for%20a%20community%20of%20agilists.%20One%20short%20curated%20agile%20tip%20a%20day%20delivered%20to%20your%20email.%0A%0AHere%20is%20the%20invite%20link%20for%20you%3A%20%0Ahttp%3A%2F%2Fwww.agiletipaday.com%2F%3Fref%3D<%= @user.ref_code %>%0A%0AThank%20me%20later" target="_blank">
                              <img src="https://s3-us-west-1.amazonaws.com/atad/email/email-icon.png" />
                              Invite a Friend
                            </a>
                          </td>
                        </tr>
                      </table>
                    </td>

                    <td class="share buttonContent" width="100%">
                      <table class="twitter emailButton" align="center">
                        <tr>
                          <td class="twitter share buttonContent">
                            <a href="https://twitter.com/intent/tweet?text=One%20short%20agile%20tip%20a%20day%20delivered%20to%20your%20email%20%28invite-only%29%3A%20http%3A%2F%2Fwww.agiletipaday.com%2F%3Fref%3D<%= @user.ref_code %>%20%23agile&source=webclient" target="_blank">
                              <img src="https://s3-us-west-1.amazonaws.com/atad/email/twitter-icon.png" />
                              Tweet to Twitter
                            </a>
                          </td>
                        </tr>
                      </table>
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </td>
</tr>

<!-- Invite link -->
<tr>
  <td align="center" valign="top">
    <table border="0" cellpadding="0" cellspacing="0" width="100%">
      <tr>
        <td align="center" valign="top">
          <table border="0" cellpadding="0" cellspacing="0" width="600" class="flexibleContainer">
            <tr>
              <td align="center" valign="top" width="100%" class="dottedBorder flexibleContainerCell">
                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                  <tr>
                    <td valign="top" class="textContent" colspan="1">
                      <b>Your invite link</b><br />
                      There is no way for your friends or colleagues to subscribe without your invite link.<br /><br />
                      AgileTipADay.com is an invite-only service for a community of agilists. One short curated agile tip a day delivered to your email.<br /><br />
                      Here is the invite link for my friends: <a href="http://www.agiletipaday.com?ref=<%= @user.ref_code %>">http://www.agiletipaday.com?ref=<%= @user.ref_code %></a>
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </td>
</tr>

<!-- Unsubscribe -->
<tr>
  <td align="center" valign="top">
    <table border="0" cellpadding="0" cellspacing="0" width="100%">
      <tr>
        <td align="center" valign="top">
          <table border="0" cellpadding="0" cellspacing="0" width="600" class="flexibleContainer">
            <tr>
              <td align="center" valign="top" width="100%" class="flexibleContainerCell">
                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                  <tr>
                    <td valign="top" class="textContent footer" colspan="1">
                      Is this too much email? You can <%= link_to "unsubscribe", unsubscribe_url(token: @user.email_token, email: 'daily') %> at anytime.
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </td>
</tr>
